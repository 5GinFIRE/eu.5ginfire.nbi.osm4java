		    <version>1.1</version>
		</dependency>        	
		<dependency>
		    <groupId>log4j</groupId>
		    <artifactId>log4j</artifactId>
		    <version>1.2.17</version>
		</dependency>			
		<!-- Dependencies for OSMClient END -->
		
